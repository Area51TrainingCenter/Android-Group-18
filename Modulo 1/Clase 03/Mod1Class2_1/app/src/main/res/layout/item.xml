<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/margen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="@dimen/imagen"
            android:layout_height="@dimen/imagen"
            android:layout_margin="@dimen/marco"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTextoUno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/lblTextoDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/lblTextoTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lblTextoCuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/negro" />
</FrameLayout>